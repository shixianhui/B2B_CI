<script type="text/javascript">

	mui('#header').on('tap', 'a', function() {
		var id = this.getAttribute('href');
		if (id == 'm-wdxx.html') {
			go_to_view(id, {
				item_id : "ok"
			});
		}
	});

	var navList = document.querySelector('.nav_list');
	var navLi = navList.children;
	var tabBox = document.querySelectorAll('.tab_box');
	var mask = mui.createMask();

	for (var i = 0; i < navLi.length; i++) {
		navLi[i].index = i;
		navLi[i].addEventListener('tap', function() {
			for (var i = 0; i < navLi.length; i++) {
				navLi[i].className = '';
				tabBox[i].style.display = 'none';
			}		
			mask.show();
			this.className = 'current';
			tabBox[this.index].style.display = 'block';
			
			var tabLi = tabBox[this.index].getElementsByTagName('li');
			for (var j = 0; j < tabLi.length; j++) {
				tabLi[j].addEventListener('tap', function() {
					for (var s = 0; s < tabLi.length; s++) {
						tabLi[s].className = '';
						tabLi[s].getElementsByTagName('i')[0].className = 'mui-icon';
					}
					this.className = 'active';
					this.getElementsByTagName('i')[0].className = 'mui-icon mui-icon-checkmarkempty';
				})
			}
		});	
	}

	for (var i = 0; i < tabBox.length; i++) {
		var sureBtn = tabBox[i].querySelector('.sure');
		sureBtn.index = i;
		sureBtn.addEventListener('tap', function() {
			var text = this.parentNode.parentNode.getElementsByClassName('active')[0].innerText;
			navLi[this.index].getElementsByTagName('span')[0].innerText = text;
			tabBox[this.index].style.display = 'none';
			mask.close();
			navLi[this.index].className = '';
		});
	}
</script>
