<script type="text/javascript">
	var style_css = '<style type="text/css">.mui-content{padding-top:'+(44+immersed)+'px !important;}#shangjia,#pintuan,#yike{padding-top:'+(44+immersed)+'px !important;}.left_nav{margin-top:'+immersed+'px;}header{padding-top:'+immersed+'px;height:'+(44+immersed)+'px !important;}#index_header{margin-top: ' + (44+immersed) + 'px !important;height:' + (44 + 0) + 'px;}</style>';
