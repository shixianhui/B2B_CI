<script type="text/javascript" charset="utf-8">
	document.addEventListener('plusready', function(){
		plus.webview.currentWebview().setStyle({
		    softinputMode: "adjustResize"  // 弹出软键盘时自动改变webview的高度
		});
		if(mui.os.android){
		    $("html").css("height","auto");
		    $("body").css("height","auto");
		}
	});
	$('input').focus(function(){
		if (mui.os.ios) {
			document.querySelector('header').style.position='absolute';
			
		}
	});
	
	$('input').blur(function(){
		if (mui.os.ios) {
			document.querySelector('header').style.position='fixed';
		}
	});
	
	var types=''
	document.addEventListener('go_to_parameter',function(e){
		keywords='';
		types=e.detail.types;
		page=1;
		page1=1;
		self.endPullUpToRefresh(true);
		self2.endPullUpToRefresh(true);
		$('#search_input').val('');
		if (types=='0') {
			$('#pintuan').attr('style','display:none;');
			$('#shangjia').attr('style','display:block;');
			$('#yike').attr('style','display:none;');
		} else if (types=='1') {
			$('#pintuan').attr('style','display:block;');
			$('#shangjia').attr('style','display:none;');
			$('#yike').attr('style','display:none;');
		} else if (types=='2') {
			$('#pintuan').attr('style','display:none;');
			$('#shangjia').attr('style','display:none;');
			$('#yike').attr('style','display:block;');
		}
		
		var no_data_html = '<div class="parent_no_data" style="min-height:667px;">';
            no_data_html += '<div id="no_data" class="no_data">请在搜索框进行搜索</div>';
            no_data_html += '</div>';
            $('.list_box:last-of-type').html('');
            $('.list_box:first-of-type').html(no_data_html);
		$('.mui-control-item').eq(1).addClass('mui-active').siblings().removeClass('mui-active')
		data_init();
	});
	
	function data_init() {
//		get_group_purchase_list('0');
//		get_notes_list('0');
	}
	document.getElementById('search_btn').addEventListener('tap',function(){
		keywords=$('#search_input').val();
		if (types=='0') {
			
		} else if (types=='1') {
			get_group_purchase_list('0');
		} else if (types=='2') {
			get_notes_list('0');
		}
	});


	mui('#pintuan').on('tap', 'li', function() {
		var product_id = this.getAttribute("item_id");
		go_to_view("groups_view.html", {
			item_id : product_id
		});
	});
	
	mui('#yike').on('tap', 'li', function() {
		var item_id = this.getAttribute("item_id");
		go_to_view("note_detail.html", {
			item_id : item_id
		});
	});
	
	mui('.header').on('tap', 'a.mui-control-item', function() {
		console.log($(this).index())
		$(this).addClass('mui-active').siblings().removeClass('mui-active');
		page=1;
		page1=1;
		if ($(this).index()==0) {
			$('#shangjia').attr('style','display:block;');
			$('#pintuan').attr('style','display:none;');
			$('#yike').attr('style','display:none;');
		} else if($(this).index()==1){
			
			$('#shangjia').attr('style','display:none;');
			$('#pintuan').attr('style','display:block;');
			$('#yike').attr('style','display:none;');
		}else{
			
			$('#shangjia').attr('style','display:none;');
			$('#pintuan').attr('style','display:none;');
			$('#yike').attr('style','display:block;');
		}
		
	});
	
	/*拼团*/
	var keywords='';
	var page=1;
	var page1=1;
	mui('#pintuan').scroll();
	var self = mui('#pintuan>.mui-scroll').pullToRefresh({
		up : {
			callback : function() {
				up_refresh(this);
			}
		}
	});
	
	function up_refresh(obj) {
		if (keywords!='') {
			get_group_purchase_list('up');
		} 
	}
	
	var self2 = mui('#yike>.mui-scroll').pullToRefresh({
		up : {
			callback : function() {
				up_refresh2(this);
			}
		}
	});
	function up_refresh2(obj) {
		if (keywords!='') {
			get_notes_list('up');
		}
		
	}
	// 拼团
	function get_group_purchase_list(type) {
		if (!is_network(false)) {return;}
		var url = base_url + 'napi/get_group_purchase_list/0/0/20/'+page;
		mui.ajax(url, {
			data: {
				status:2,
				keywords:keywords
			},
			dataType: "json",
			type: "post",
			timeout: 10000,
			success: function(res) {
					console.log(JSON.stringify(res))
				if (res.success) {
					var html1 = template('tpl_group_purchase1', res);
					var html2 = template('tpl_group_purchase2', res);
					if (type == 'up') {
						var size1 = $("#group_purchase1 li[item_id]").size();
						var size2= $("#group_purchase2 li[item_id]").size();
						if ((size2+size1) > 0) {
							if(size2>size1){
								$("#group_purchase1 li[item_id]:last").after(html1);
								$("#group_purchase2 li[item_id]:last").after(html2);
							}else{
								$("#group_purchase1 li[item_id]:last").after(html2);
								$("#group_purchase2 li[item_id]:last").after(html1);
							}
						} else {
							$('#group_purchase1').html(html1);
							$('#group_purchase2').html(html2);
						}
						if(res.data.is_next_page!='0') {
							page=page+1;
							self.endPullUpToRefresh(false);
						} else {
//							$('#page').val(page);
							self.endPullUpToRefresh(true);
						}
			 		} else {
						page=page+1;
						if (res.data.is_next_page == 0) {
							self.endPullUpToRefresh(true);
						} else {
							self.endPullUpToRefresh(false);
							self.refresh(true);
						}
						if (!res.data.item_list.length) {
                            var no_data_html = '<div class="parent_no_data" style="min-height:667px;">';
                            no_data_html += '<div id="no_data" class="no_data">暂无数据，点击刷新</div>';
                            no_data_html += '</div>';
                            $('#group_purchase1').html(no_data_html);
                            $('#group_purchase2').html('');
                        }else{
                        	
							$('#group_purchase1').html(html1);
							$('#group_purchase2').html(html2);
                        }
					}
					
				} else {
					mui.toast(res.message);
				}
			},
			error: error
		});
	}
	

	// 蚁客
	function get_notes_list(type) {
		if (!is_network(false)) {return;}
		console.log(page1)
		var url = base_url + 'napi/get_notes_list/0/0/20/'+page1;
		mui.ajax(url, {
			data: {
				keywords:keywords
			},
			dataType: "json",
			type: "post",
			timeout: 10000,
			success: function(res) {
					console.log(JSON.stringify(res))
				if (res.success) {
					var html1 = template('tpl_biji_list1', res);
					var html2 = template('tpl_biji_list2', res);
					if (type == 'up') {
						var size1 = $("#biji_list1 li[item_id]").size();
						var size2= $("#biji_list2 li[item_id]").size();
						if ((size2+size1) > 0) {
							if(size2>size1){
								$("#biji_list1 li[item_id]:last").after(html1);
								$("#biji_list2 li[item_id]:last").after(html2);
							}else{
								$("#biji_list1 li[item_id]:last").after(html2);
								$("#biji_list2 li[item_id]:last").after(html1);
							}
						} else {
							$('#biji_list1').html(html1);
							$('#biji_list2').html(html2);
						}
						if(res.data.is_next_page!='0') {
							page1=page1+1;
							self2.endPullUpToRefresh(false);
						} else {
//							$('#page').val(page);
							self2.endPullUpToRefresh(true);
						}
			 		} else {
						page1=page1+1;
						if (res.data.is_next_page == 0) {
							self2.endPullUpToRefresh(true);
						} else {
							self2.endPullUpToRefresh(false);
							self2.refresh(true);
						}
						if (!res.data.item_list.length) {
                            var no_data_html = '<div class="parent_no_data" style="min-height:667px;">';
                            no_data_html += '<div id="no_data" class="no_data">暂无数据，点击刷新</div>';
                            no_data_html += '</div>';
                            $('#biji_list1').html(no_data_html);
                            $('#biji_list2').html('');
                        }else{
                        	
							$('#biji_list1').html(html1);
							$('#biji_list2').html(html2);
                        }
					}
					
				} else {
					mui.toast(res.message);
				}
			},
			error: error
		});
	}
	

</script>