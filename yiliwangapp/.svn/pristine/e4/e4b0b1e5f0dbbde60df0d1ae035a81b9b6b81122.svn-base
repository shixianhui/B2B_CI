	<script type="text/javascript" charset="utf-8">
		mui.init();
		var person=document.querySelectorAll('.person');
		var alertB=document.querySelector('.alert');
		var close=document.querySelectorAll('.mui-icon-closeempty')[1];
		for(var i=0;i<person.length;i++){
			person[i].addEventListener('tap',function(event){
